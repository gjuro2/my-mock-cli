{
    "title": "Sample mock API",
    "mappings": [
        {
            "request": "GET /api/users/1",
            "response": {
                "body": {
                    "id": 1,
                    "title": "test 1"
                }
            }
        },
        {
            "title": "get list",
            "request": "POST /api/users",
            "response": {
                "body": [
                    {
                        "id": 1,
                        "title": "test 1"
                    },
                    {
                        "id": 2,
                        "title": "test 2"
                    },
                    {
                        "id": 3,
                        "title": "test 3"
                    }
                ]
            }
        },
        {
            "title": "get first matching endpoint any HTTP method ",
            "request": "* /api/users/1",
            "response": {
                "body": {
                    "id": "1",
                    "title": "test 1"
                }
            }
        },
        {
            "title": "get first mathing endpoint",
            "request": "POST /api/*/1",
            "response": {
                "body": {
                    "id": "1",
                    "title": "test 1"
                }
            }
        }
    ]
}
